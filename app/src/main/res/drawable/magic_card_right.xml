<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow ：底部阴影层-->
    <item>
        <shape android:shape="rectangle" >
            <!-- from top to bottom -->
            <gradient
                android:angle="180"
                android:centerColor="#EEEEEE"
                android:endColor="#FFFFFF"
                android:startColor="#CCCCCC" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- White Top color：顶部层 -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="2dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="9dp"
                android:left="9dp"
                android:right="9dp"
                android:top="9dp" />
        </shape>
    </item>

</layer-list>